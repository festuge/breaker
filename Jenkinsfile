pipeline{
    agent any
    stages{
        stage('1-kiss-menwo'){
            steps{
                echo "kisses with love"
            }
        }
        stage('2-hugs-for-menwo'){
            steps{
                echo "hugs that will make you remember me forever"
            }
        }
        stage('3-executing'){
            steps{
                sh 'sudo chmod +x freaking.sh'
            }
        }
        stage('4-running-it'){
            steps{
                sh 'bash -x freaking.sh'
            }
        }
        stage('5-disc space'){
            steps{
                sh 'lscpu'
            }
        }
    }
}
